- (void)startLocation
{
    if (locationManager == nil)
    {
        locationManager = [[CLLocationManager alloc] init];
        locationManager.delegate = self;
#ifdef __IPHONE_8_0
        [locationManager requestAlwaysAuthorization];//添加这句
#endif
    }
    [locationManager startUpdatingLocation];
}
#pragma mark - CLLocationManagerDelegate
- (void)locationManager:(CLLocationManager *)manager
    didUpdateToLocation:(CLLocation *)newLocation
           fromLocation:(CLLocation *)oldLocation
{
    // 停掉定位
    locationManager.delegate = nil;
    [locationManager stopUpdatingLocation];
    
    // 反向地理解析
    geocoder = [[CLGeocoder alloc] init];
    [geocoder reverseGeocodeLocation:newLocation completionHandler:^(NSArray *placemark,NSError *error)
     {
         CLPlacemark *mark = [placemark objectAtIndex:0];
         UIAlertView *alertView = [[UIAlertView alloc] initWithTitle:@"定位信息"
                                                             message:mark.locality
                                                            delegate:nil
                                                   cancelButtonTitle:@"关闭"
                                                   otherButtonTitles: nil];
         [alertView show];
//         NSLog(@"%@",mark.locality);           // 杭州市
//         NSLog(@"%@",mark.administrativeArea); // 浙江省
     }];
}
